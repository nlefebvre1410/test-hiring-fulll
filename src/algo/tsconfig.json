{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["./src/*"]
    },

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "index.ts",
    "types/**/*",
    "constants/**/*",
    "utils/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts"
  ],
  "compileOnSave": false
}
